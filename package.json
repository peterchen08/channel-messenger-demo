{
  "name": "channel-messenger-project",
  "version": "1.0.0",
  "description": "nodejs微服务框架创建一个简单的可拓展的论坛api ",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "dev": "cross-env NODE_ENV=development dotenv-flow -p ./env -- ts-node -r tsconfig-paths/register ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --config moleculer.config.ts",
    "start": "ts-node -r tsconfig-paths/register ./node_modules/moleculer/bin/moleculer-runner.js --config moleculer.config.ts",
    "cli": "moleculer connect NATS",
    "ci": "jest --watchAll",
    "test": "jest --coverage",
    "lint": "eslint --ext .js,.ts .",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:down": "docker-compose down"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "repository": {
    "type": "git",
    "url": "git+"
  },
  "homepage": "#readme",
  "author": "",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
		"@types/bcryptjs": "^2.4.2",
		"@types/jest": "^28.1.7",
    "@types/js-yaml": "^4.0.5",
		"@types/mkdirp": "^1.0.2",
		"@types/node": "^18.7.6",
    "@types/rimraf": "^3.0.2",
		"@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/dotenv-flow": "^3.2.0",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/lodash": "^4.14.182",
		"@types/swagger-ui-dist": "^3.30.1",
    "@types/swagger-stats": "^0.95.5",
    "bcrypt": "^5.0.1",
    "chokidar": "^3.5.3",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.2.1",
		"@typescript-eslint/eslint-plugin": "^5.33.1",
		"@typescript-eslint/parser": "^5.33.1",
		"eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^28.1.3",
    "jest-chain": "^1.1.5",
		"jest-circus": "^28.1.3",
    "jest-cli": "^28.1.3",
    "jest-junit": "^14.0.0",
    "jest-extended": "^3.0.2",
    "moleculer-repl": "^0.7.2",
    "open": "^8.4.0",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
		"tsconfig-paths": "^4.1.0",
		"ts-jest": "^28.0.8",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "nats": "^2.7.1",
    "ioredis": "^4.27.7",
    "redlock": "^4.2.0",
    "js-yaml": "^4.1.0",
    "replace-in-file": "^6.3.5",
    "swagger-jsdoc": "^6.2.5",
		"swagger-ui-dist": "^4.13.2",
    "swagger-editor-dist": "^4.4.0",
    "openapi-types": "^12.0.0",
		"swagger-stats": "^0.99.2",
		"prom-client": "^14.0.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "core-js": "^3.24.1",
		"cross-env": "^7.0.3",
		"csv-parse": "^4.16.0",
		"dotenv": "^16.0.1",
		"dotenv-flow": "^3.2.0",
		"dotenv-flow-cli": "^1.0.0",
    "helmet": "^5.1.1",
    "json2typescript": "^1.5.1",
		"jsonwebtoken": "^8.5.1",
		"lodash": "^4.17.21",
		"moleculer": "^0.14.23",
		"moleculer-db": "^0.8.19",
    "moleculer-db-adapter-mongo": "^0.4.15",
		"moleculer-db-adapter-mongoose": "^0.8.14",
    "@ourparentcenter/moleculer-decorators-extended": "^1.1.1",
    "moleculer-web": "^0.10.4",
    "mongodb": "^4.8.1",
		"mongoose": "^6.5.2",
		"reflect-metadata": "^0.1.13",
    "ts-results": "^3.3.0",
    "typescript": "^4.7.4"
},
  "engines": {
    "node": ">= 15.0.0"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "collectCoverage": false,
		"reporters": [
			"default",
			"jest-junit"
		],
		"setupFiles": [
			"./jest.setup.ts"
		],
		"setupFilesAfterEnv": [
			"jest-chain",
			"jest-extended/all"
		],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json",
        "diagnostics": true
      }
    }
  }
}
